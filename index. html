    <input type="text" id="username" placeholder="Username" />
    <input type="password" id="password" placeholder="Password" />
    <div id="captcha-question"></div>
    <input type="text" id="captcha-answer" placeholder="Jawaban CAPTCHA" />
    <button onclick="login()">Masuk</button>
  </div>

  <!-- MAIN CONTENT -->
  <div class="container hidden" id="main-content">
    <h2>üìÅ Link Internal BP3KP JAWA IV</h2>
    <a class="link-card" href="https://bit.ly/psrpesisir" target="_blank">üåä PSR Pesisir</a>
    <a class="link-card" href="https://docs.google.com/spreadsheets/d/xxx" target="_blank">üìä Database PKP</a>
